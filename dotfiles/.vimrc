syntax on
set t_Co=256
set background=dark
set expandtab
set shiftwidth=4
set tabstop=4
set smarttab
set incsearch
set hlsearch
set number
set mouse=a

colorscheme solarized-uilli

highlight LineNr ctermfg=darkgray
highlight VertSplit ctermfg=59 ctermbg=59 cterm=NONE 

set fillchars+=vert:\ 

source ~/.vim/cyclecolor.vim
